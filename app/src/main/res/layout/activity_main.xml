<?xml version="1.0" encoding="utf-8"?>
<com.yundin.takewingtest.view.LockableNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MPAndroidChart_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/MPAndroidChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="50dp" />
    </LinearLayout>

</com.yundin.takewingtest.view.LockableNestedScrollView>